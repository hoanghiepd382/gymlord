extends ../../layouts/default.pug
include ../../mixins/flash.pug

block main 
    +flashSuccess(3000)
    +flashError(3000)

    h1(class="mb-4") #{pageTitle}

    if (role.permissions.includes("account_view"))
        .card.mb-3 
            .card-header Danh sách 
            .card-body 
                .row 
                    .col-8 
                    .col-4.test-right 
                        if (role.permissions.includes("account_create"))
                            a(
                                href=`${prefixAdmin}/user/create`
                                class="btn btn-outline-success"
                            ) + Thêm mới
                
                table(
                    class="table table-hover table-sm"
                )
                    thead 
                        tr 
                            th STT 
                            th Họ tên
                            th Email
                            td Số điện thoại
                            th Trạng thái 
                            th Hành động

                    tbody 
                        each items, index in records
                            tr
                                td #{index+1}                                                        
                                td #{items.fullName}
                                td #{items.email} 
                                td #{items.phone}
                                if (role.permissions.includes("product_view"))                        
                                    td 
                                        if(items.status == "active")
                                            a(href="javascript:;"
                                            button-change-status
                                            data-status="active" 
                                            data-id=items.id
                                            class="badge badge-success"                          
                                            ) Hoạt động
                                        
                                        else
                                            a(href="javascript:;"
                                            button-change-status
                                            data-status="inactive" 
                                            data-id=items.id
                                            class="badge badge-danger"
                                            ) Dừng hoạt động
                                else 
                                    span(
                                        button-change-status 
                                        data-status="active"
                                        class="badge badge-success"
                                    ) Hoạt động
                                        
                                td 
                                    a(href=`${prefixAdmin}/account/detail/${items.id}`
                                        class="btn btn-secondary btn-sm"                                  
                                    ) Chi tiết
                                    if (role.permissions.includes("account_edit"))
                                        a(href=`${prefixAdmin}/account/edit/${items.id}`
                                            class="btn btn-warning btn-sm"                                  
                                        ) Sửa
                                    if (role.permissions.includes("account_delete"))
                                        button(class="btn btn-danger btn-sm ml-1"
                                                data-item=items.id
                                                button-delete
                                        ) Xóa

    script(src="/admin/js/user.js") 